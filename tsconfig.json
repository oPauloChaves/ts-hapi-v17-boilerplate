{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2015", "es2017"],
    "allowJs": false,
    "declaration": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "inlineSources": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}